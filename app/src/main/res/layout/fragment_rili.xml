<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.RiliFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.bishe.myapplication.testrili.DateView
            android:id="@+id/date_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/select_bg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="月经期"
                android:textColor="@color/theme_color"
                android:textSize="12sp" />

            <TextView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/select_bg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="预测期"
                android:textColor="@color/forecast"
                android:textSize="12sp" />

            <TextView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="14dp"
                android:background="@drawable/select_bg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="安全期"
                android:textColor="@color/safety"
                android:textSize="12sp" />

            <TextView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/select_bg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="易孕期"
                android:textColor="@color/risk"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_mt_come"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/dym_lai"
                android:drawablePadding="3dp"
                android:text="姨妈来了"
                android:textColor="@color/gray_text"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/dym_xuan" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_mt_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/dym_zou"
                android:drawablePadding="3dp"
                android:text="姨妈走了"
                android:textColor="@color/gray_text"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/dym_xuan" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>